<%= turbo_frame_tag 'modal' do %>
  <div tabindex="-1" class="bg-gray-900/60 overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 md:inset-0 h-modal md:h-full justify-center items-center flex"
       data-controller="modal"
       data-action="turbo:submit-end->modal#submitEnd">
    <div @keyup.escape.window="document.querySelector('.close-modal').click();" class="relative p-4 w-full <%= @max_width_class %> md:h-auto z-50 max-h-full overflow-y-auto overflow-x-hidden">
      <div class="relative p-4 w-full max-w-4xl h-full <%= @height_class %> bg-white md:h-auto mx-auto rounded-lg">
        <% if @show_header %>
          <div class="flex justify-end p-2">
            <h2 class="text-xl text-slate-800 font-bold w-full text-left mb-4">
              <%= @title %>
              <button type="button"
                      class="close-modal text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg float-right text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-800 dark:hover:text-white"
                      data-action="modal#close"
                      >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
              </button>
            </h2>
          </div>
        <% end %>
        <div class="p-2">
          <%= content %>
        </div>
      </div>
    </div>
  </div>
  <div class="bg-gray-900 bg-opacity-50 fixed inset-0 z-40"></div>
<% end %>
