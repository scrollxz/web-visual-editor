<div class="w-full space-y-5 p-5">
  <%= link_to 'new website', new_website_path() %>
  <div class="space-y-3 bg-white rounded-lg p-5">
    <% @websites.each do |website| %>
      <div class="flex justify-between w-full w-1/3">
        <%= link_to website.name, website_path(website) %>
        <div class="flex space-x-3">
          <%= link_to 'show', website_path(website) %>
          <%= link_to 'edit', edit_website_path(website) %>
          <%= button_to 'destroy', website_path(website), method: :delete %>
        </div>
      </div>
    <% end %>
  </div>
</div>